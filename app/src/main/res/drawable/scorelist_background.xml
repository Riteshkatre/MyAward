<!-- shadowed_shape.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="#FFFFFF" /> <!-- Set the background color as needed -->
            <stroke
                android:width="@dimen/_2sdp"
                android:color="#B8B5B5" />
        </shape>
    </item>
    <!-- Shadow -->
    <item android:right="@dimen/_2sdp" android:left="@dimen/_2sdp" android:top="@dimen/_2sdp" android:bottom="@dimen/_2sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="#80B8B5B5" /> <!-- Adjust the alpha value for the shadow color -->
        </shape>
    </item>
</layer-list>
